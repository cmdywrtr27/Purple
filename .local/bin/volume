#!/bin/bash

function send_notification() {
	volume=$(pamixer --get-volume-human)
	dunstify -a "changevolume" -u low -r "9993" -h int:value:"$volume" -i "~/.icons/Luminary/devices/scalable/volume-$1.svg" "Volume: ${volume}" -t 5000
}

case $1 in
up)
	# Set the volume on (if it was muted)
	pamixer -u
	pamixer -i 5 --allow-boost
	send_notification $1
	;;
down)
	pamixer -u
	pamixer -d 5 --allow-boost
	send_notification $1
	;;
mute)
	pamixer -t
	if $(pamixer --get-volume-human); then
		dunstify -i "~/.icons/Luminary/devices/scalable/volume-mute.svg" -a "changevolume" -t 5000 -r 9993 -u low "Muted"
	else
		send_notification $1
	fi
	;;
esac
